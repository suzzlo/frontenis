<div class="row">

	<div class="col-md-9">

<table class="table table-striped table-hover ">
	<tr>
		<th>#</td>
		<th>Score</td>
		<th>Played</td>
		<th>Win</td>
		<th>Loose</td>
		<th>Differential</td>
		<th>Efectivity (%)</td>
	</tr>

	<% @rankings.sort_by {|k,v| v[:score].to_i}.reverse.each { |key, value| %>
	<tr>
		<td><%= link_to value[:name], :controller => 'statistics', :action => 'user', :id => value[:id] %></td>
		<td><%= value[:score] %></td>
		<td><%= value[:played_games] %></td>
		<td><%= value[:winned_games] %></td>
		<td><%= value[:loosed_games] %></td>
		<td><%= value[:differential] %></td>
		<td><%= value[:efectivity] %></td>
	</tr>
	<% } %>

</table>


</div>

<div class="col-md-3">

	<div class="panel panel-default">
		<div class="panel-heading">
			Championships (<%= link_to 'All', controller: "rankings", action: "index"%>)
		</div>
		<div class="panel-body">
			<% @championships.each do |cs| %>
			<p>
				<%= link_to cs.name, controller: "rankings", action: "index", championship_id: cs.id %>
			</p>
			<% end %>
		</div>
	</div>

</div>
</div>
